---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Location">
  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="relative h-[500px] bg-gradient-to-r from-orange-50 to-orange-100">
      <div class="absolute inset-0 bg-[url('/restaurant-interior.jpg')] bg-cover bg-center opacity-50"></div>
      <div class="relative container mx-auto px-4 h-full flex flex-col justify-center">
        <h1 class="text-5xl md:text-6xl font-bold text-orange-900 mb-4">Find Us</h1>
        <p class="text-xl md:text-2xl text-orange-800 max-w-2xl">
          Visit our cozy breakfast spot in the heart of Nashua. We're easy to find and ready to serve you the best breakfast in town!
        </p>
      </div>
    </section>

    <!-- Content Section -->
    <div class="container mx-auto px-4 py-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Map Section -->
        <div class="rounded-2xl overflow-hidden shadow-xl">
          <iframe 
            class="w-full h-[400px] border-0"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2933.654715058048!2d-71.4674836845336!3d42.67247997916746!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89e24f1b1b0b1b1b%3A0x1b1b1b1b1b1b1b1b!2s295%20Lake%20St%2C%20Nashua%2C%20NH%2003060!5e0!3m2!1sen!2sus!4v1633020000000!5m2!1sen!2sus"
            allowfullscreen=""
            loading="lazy"
          ></iframe>
        </div>

        <!-- Info Section -->
        <div class="space-y-12">
          <!-- Contact Card -->
          <div class="bg-white p-8 rounded-2xl shadow-lg border border-orange-100">
            <h2 class="text-3xl font-bold text-orange-900 mb-6">Contact Information</h2>
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="p-3 bg-orange-50 rounded-lg">
                  <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-700">Address</p>
                  <p class="text-gray-600">295 Lake St, Nashua, NH 03060</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="p-3 bg-orange-50 rounded-lg">
                  <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-700">Phone</p>
                  <p class="text-gray-600">(603) 883-0019</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Hours Card -->
          <div class="bg-white p-8 rounded-2xl shadow-lg border border-orange-100">
            <h2 class="text-3xl font-bold text-orange-900 mb-6">Opening Hours</h2>
            <div class="space-y-4">
              <div class="flex justify-between items-center p-4 bg-orange-50 rounded-lg">
                <span class="font-medium text-gray-700">Monday - Friday</span>
                <span class="text-gray-600">6:00 AM - 2:00 PM</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-orange-50 rounded-lg">
                <span class="font-medium text-gray-700">Saturday</span>
                <span class="text-gray-600">6:00 AM - 2:00 PM</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-orange-50 rounded-lg">
                <span class="font-medium text-gray-700">Sunday</span>
                <span class="text-gray-600">7:00 AM - 1:00 PM</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Parking Section -->
      <div class="mt-16 bg-gradient-to-r from-orange-50 to-orange-100 p-8 rounded-2xl shadow-lg">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-orange-900 mb-4">Parking Information</h2>
          <p class="text-gray-700 text-lg">
            We offer ample parking in our private lot, with additional street parking available on Lake Street. Our parking is completely free for all customers, making your visit as convenient as possible.
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>
